<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.android.practiceset2.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="SCORE"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#A9A9A9"
            android:textStyle="bold" />


        <TextView
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="OVERS"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#A9A9A9"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/runs"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0/0"
            android:textColor="#A9A9A9"
            android:textSize="50sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/overs"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0.0"
            android:textColor="#A9A9A9"
            android:textSize="50sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="HISTORY"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#A9A9A9"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="X  |  X  |  X  |  X  |  X  |  X"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#009688"
            android:textStyle="bold"
            android:background="@drawable/back"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="#FF8C00"
            android:gravity="center"
            android:onClick="single"
            android:text="SINGLE" />

        <Button
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="#FF8C00"
            android:gravity="center"
            android:onClick="four"
            android:text="FOUR" />

        <Button
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="#FF8C00"
            android:gravity="center"
            android:onClick="six"
            android:text="SIX" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="#FF8C00"
            android:gravity="center"
            android:onClick="noBall"
            android:text="NO BALL" />


        <Button
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="#FF8C00"
            android:gravity="center"
            android:onClick="wideBall"
            android:text="WIDE BALL" />

        <Button
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="#FF8C00"
            android:gravity="center"
            android:onClick="dotBall"
            android:text="DOT BALL" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="#FF00FB"
            android:gravity="center"
            android:onClick="reset"
            android:text="RESET" />

        <Button
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="#FF8C00"
            android:gravity="center"
            android:onClick="wicket"
            android:text="WICKET" />


    </LinearLayout>


</LinearLayout>